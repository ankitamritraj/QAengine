<% provide(:title, "Sign Up") %> 

<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
	<main class="mdl-layout__content">	
		<div class="mdl-card mdl-shadow--6dp">
			<div class="mdl-card__title mdl-color mdl-color-text--white">
				<h2 class = "mdl-card__title-text sign-up-header-login">Sign Up Now</h2>
			</div>
			<div class="mdl-card__supporting-text">
				<%= form_for(@user) do |f| %>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :name, "Enter your name", class: "mdl-textfield__label" %>
						<%= f.text_field :name, class: "mdl-textfield__input", pattern: "[A-Z,a-z, ]*" %>
						<span class="mdl-textfield__error">Only alphabet and Spaces please!</span>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :email, class: "mdl-textfield__label" %>
						<%= f.text_field :email, class: "mdl-textfield__input"%>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :institution, "Institution Name", class:"mdl-textfield__label"%>
						<%= f.text_field :institution, class: "mdl-textfield__input" %>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :city, "City", class:"mdl-textfield__label"%>
						<%= f.text_field :city, class: "mdl-textfield__input" %>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :state, "State", class:"mdl-textfield__label"%>
						<%= f.text_field :state, class: "mdl-textfield__input" %>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :password, class:"mdl-textfield__label"%>
						<%= f.password_field :password, class: "mdl-textfield__input" %>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<%= f.label :password, "Confirm Password", class:"mdl-textfield__label"%>
						<%= f.password_field :password, class: "mdl-textfield__input" %>
					</div>
					<div class="mdl-card__actions mdl-card--border">
						<%= f.submit "Create my account", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
					</div>
				<% end %>
			</div>
		</div>
	</main>
</div>
