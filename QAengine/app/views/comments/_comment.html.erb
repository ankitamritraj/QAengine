<hr>
<span>
	<%= link_to comment.user.name, comment.user%>
</span>	
<span>
	<%= comment.content %>
</span>

<span class="timestamp">
	Posted <%= time_ago_in_words(comment.created_at) %> ago.
</span> 
<% if current_user == comment.user %>
    <%= link_to "delete", comment , method: :delete, data: { confirm: "You sure?" } %>
<% end %>